[color]
    ui = true
    pager = true
    status = auto
    branch = auto
    interactive = auto

[alias]
    co = checkout
    st = status
	lg = log --color --graph --pretty=format:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an>%Creset'

[color]
    branch = auto

[color "status"]
    added = green
    changed = yellow
    untracked = red

[push]
    default = simple

[branch]
    autosetuprebase = always

[include]
    path = ~/dotfiles/gitconfig.local

[url "git@github.com:"]
	insteadOf = https://github.com/
